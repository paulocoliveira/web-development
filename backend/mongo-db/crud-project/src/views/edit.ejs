<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head.ejs") %> 
<body>
    <h1><%= title %></h1>
    <%- include("partials/navbar.ejs") %> 
    <br>
    <form action="/edit/<%= user._id %> " method="POST">
        <div>
            <label>Name</label>
            <input type="text" name="name" placeholder="Type your name" value="<%= user.name %>">
        </div>
        <div>
            <label>Age</label>
            <input type="text" name="age" placeholder="Type your age" value="<%= user.age %>">
        </div>
        <div>
            <label>E-mail</label>
            <input type="text" name="email" placeholder="Type your e-mail" value="<%= user.email %>">
        </div>
        <button type="submit">Edit</button>

        <% if (typeof message !== "undefined") { %>
            <span><%= message %> </span>
        <% } %> 

    </form>

    <%- include("partials/foot.ejs") %> 
</body>
</html>